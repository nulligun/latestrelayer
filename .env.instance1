# Instance 1 - Kick Stream
# Copy this file to .env and customize for your first instance

# Instance Identification (required for running multiple instances)
COMPOSE_PROJECT_NAME=relay1

# Kick (IVS) Configuration
KICK_URL=
KICK_KEY=

# Local RTMP Settings
RTMP_PORT=1936
HTTP_STATS_PORT=8080
RTMP_APP=live
RTMP_STREAM_NAME=mystream

# Offline Video
OFFLINE_VIDEO_PATH=/opt/offline-kick.mp4

# Video Encoding Settings
OUT_RES=1080
OUT_FPS=30
VID_BITRATE=3000k
MAX_BITRATE=3500k
BUFFER_SIZE=12000k

# Audio Encoding Settings
AUDIO_BITRATE=128k
AUDIO_SAMPLERATE=48000

# Supervisor Settings
POLL_INTERVAL=1
KILL_GRACE=3
CRASH_BACKOFF=2

# Logging
LOG_DIR=./logs/instance1