# Instance 2 - YouTube Stream
# Copy this file to .env and customize for your second instance

# Instance Identification (required for running multiple instances)
COMPOSE_PROJECT_NAME=relay2

# YouTube Configuration (or another streaming platform)
KICK_URL=
KICK_KEY=

# Local RTMP Settings (different ports from instance 1)
RTMP_PORT=1937
HTTP_STATS_PORT=8081
RTMP_APP=live
RTMP_STREAM_NAME=mystream

# Offline Video
OFFLINE_VIDEO_PATH=/opt/offline-youtube.mp4

# Video Encoding Settings
OUT_RES=1080
OUT_FPS=30
VID_BITRATE=3000k
MAX_BITRATE=3500k
BUFFER_SIZE=12000k

# Audio Encoding Settings
AUDIO_BITRATE=128k
AUDIO_SAMPLERATE=48000

# Supervisor Settings
POLL_INTERVAL=1
KILL_GRACE=3
CRASH_BACKOFF=2

# Logging
LOG_DIR=./logs/instance2